<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Numbers"
        android:id="@+id/et1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:textStyle="bold">
    </EditText>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="20dp"
          android:id="@+id/et1"
          >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="C"
                  android:id="@+id/clear"
                  android:backgroundTint="@android:color/holo_red_dark"
                  android:layout_marginLeft="10dp"
                  >

              </Button>
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="("
                  android:textColor="@color/black"
                  android:backgroundTint="@android:color/holo_green_dark"
                  android:id="@+id/openpara"
                  android:layout_marginLeft="10dp"
                  android:layout_marginBottom="10dp">

              </Button>
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=")"
                  android:textColor="@color/black"
                  android:backgroundTint="@android:color/holo_green_dark"
                  android:id="@+id/closepara"
                  android:layout_marginLeft="10dp">

              </Button>
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="/"
                  android:textColor="@color/black"
                  android:backgroundTint="@android:color/holo_orange_dark"
                  android:id="@+id/div"
                  android:layout_marginLeft="10dp">

              </Button>

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="7"
                  android:id="@+id/b7"
                  android:textColor="@color/black"
                  android:backgroundTint="@android:color/holo_blue_light"
                  android:layout_marginLeft="10dp">

              </Button>
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="8"
                  android:textColor="@color/black"
                  android:id="@+id/b8"
                  android:backgroundTint="@android:color/holo_blue_light"
                  android:layout_marginLeft="10dp">

              </Button>
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="9"
                  android:textColor="@color/black"
                  android:id="@+id/b9"
                  android:backgroundTint="@android:color/holo_blue_light"
                  android:layout_marginLeft="10dp">

              </Button>
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="*"
                  android:textColor="@color/black"
                  android:layout_marginLeft="10dp"
                  android:backgroundTint="@android:color/holo_orange_dark"
                  android:id="@+id/multi">

              </Button>

          </LinearLayout>
          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="4"
              android:textColor="@color/black"
              android:id="@+id/b4"
              android:backgroundTint="@android:color/holo_blue_light"
              android:layout_marginLeft="10dp">

          </Button>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="5"
              android:textColor="@color/black"
              android:id="@+id/b5"
              android:backgroundTint="@android:color/holo_blue_light"
              android:layout_marginLeft="10dp">

          </Button>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="6"
              android:textColor="@color/black"
              android:id="@+id/b6"
              android:backgroundTint="@android:color/holo_blue_light"
              android:layout_marginLeft="10dp">

          </Button>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="-"
              android:textColor="@color/black"
              android:backgroundTint="@android:color/holo_orange_dark"
              android:id="@+id/sub"
              android:layout_marginLeft="10dp">

          </Button>

      </LinearLayout>
          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="3"
              android:textColor="@color/black"
              android:id="@+id/b3"
              android:backgroundTint="@android:color/holo_blue_light"
              android:layout_marginLeft="10dp">

          </Button>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2"
              android:textColor="@color/black"
              android:id="@+id/b2"
              android:backgroundTint="@android:color/holo_blue_light"
              android:layout_marginLeft="10dp">

          </Button>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1"
              android:textColor="@color/black"
              android:id="@+id/b1"
              android:backgroundTint="@android:color/holo_blue_light"
              android:layout_marginLeft="10dp">

          </Button>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="+"
              android:textColor="@color/black"
              android:id="@+id/add"
              android:backgroundTint="@android:color/holo_orange_dark"
              android:layout_marginLeft="10dp">

          </Button>

      </LinearLayout>
          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="AC"
              android:layout_marginLeft="10dp"
              android:backgroundTint="@android:color/holo_red_dark"
              android:id="@+id/ac">

          </Button>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="@color/black"
              android:layout_marginLeft="10dp"
              android:backgroundTint="@android:color/holo_blue_light"
              android:id="@+id/zero">

          </Button>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="."
              android:textColor="@color/black"
              android:layout_marginLeft="10dp"
              android:backgroundTint="@android:color/holo_blue_light"
              android:id="@+id/dot">
          </Button>
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="="
              android:textColor="@color/black"
              android:backgroundTint="@android:color/holo_orange_dark"
              android:layout_marginLeft="10dp"
              android:id="@+id/equal">

          </Button>

      </LinearLayout>
   </LinearLayout>
    </RelativeLayout>



